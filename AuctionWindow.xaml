<Window x:Class="Cliver.Foreclosures.AuctionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliver.Foreclosures"
             mc:Ignorable="d" 
        Title="Get Help" Height="auto" Width="613" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanResize" 
        Background="#ffffff" Topmost="False" ShowInTaskbar="True" SizeToContent="Height" 
        FontFamily="Microsoft Sans Serif"
        MinHeight="400" MinWidth="500"
         AllowDrop="True" Drop="Window_Drop"
            >
    <Grid Background="#ffffff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0">Listing Code</Label>
        <TextBox Grid.Column="1" Grid.Row="0" Name="ListingCode">fdsf</TextBox>
        <Label Grid.Column="2" Grid.Row="0">County</Label>
        <ListBox Grid.Column="3" Grid.Row="0" Name="County">fdsf</ListBox>
        <Label Grid.Column="4" Grid.Row="0">Current Owners</Label>
        <TextBox Grid.Column="5" Grid.Row="0" Name="CurrentOwners">fdsf</TextBox>
        <Label Grid.Column="0" Grid.Row="1">Case #</Label>
        <TextBox Grid.Column="1" Grid.Row="1" Name="CaseId">fdsf</TextBox>
        <Label Grid.Column="2" Grid.Row="1">Filling Date</Label>
        <TextBox Grid.Column="3" Grid.Row="1" Name="FillingDate">fdsf</TextBox>
        <Label Grid.Column="0" Grid.Row="2">Entry Date</Label>
        <TextBox Grid.Column="1" Grid.Row="2" Name="EntryDate">fdsf</TextBox>
        <Label Grid.Column="0" Grid.Row="3">Plaintiff Code</Label>
        <ListBox Grid.Column="1" Grid.Row="3" Name="PlaintiffCode">fdsf</ListBox>
        <Label Grid.Column="0" Grid.Row="4">Or MTG D</Label>
        <TextBox Grid.Column="1" Grid.Row="4" Name="MTG_D">fdsf</TextBox>
        <Label Grid.Column="2" Grid.Row="4">Doc_#</Label>
        <TextBox Grid.Column="3" Grid.Row="4" Name="DocId">fdsf</TextBox>
        <Label Grid.Column="0" Grid.Row="5">Legal Descr</Label>
        <TextBox Grid.Column="1" Grid.Row="5" Name="LegalDescr">fdsf</TextBox>
        <Label Grid.Column="0" Grid.Row="6">Address</Label>
        <TextBox Grid.Column="1" Grid.Row="6" Name="Address">fdsf</TextBox>
        <Label Grid.Column="0" Grid.Row="7">City</Label>
        <ListBox Grid.Column="1" Grid.Row="7" Name="City">fdsf</ListBox>
        <Label Grid.Column="0" Grid.Row="8">ZIP</Label>
        <ListBox Grid.Column="1" Grid.Row="8" Name="ZipCode">fdsf</ListBox>
        <Label Grid.Column="0" Grid.Row="0">PIN</Label>
        <TextBox Grid.Column="1" Grid.Row="0" Name="Pin">fdsf</TextBox>
    </Grid>
</Window>
