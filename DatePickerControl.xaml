<DatePicker x:Class="Cliver.Foreclosures.DatePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliver.Foreclosures"
             mc:Ignorable="d"
            SelectedDateChanged="DatePicker_SelectedDateChanged"
            >

        <DatePicker.Resources>
            <Style TargetType="{x:Type DatePickerTextBox}">
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate>
                        <TextBox Name="TextBox"
                            PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TextBox_TextChanged"
                                 LostFocus="TextBox_LostFocus" GotFocus="TextBox_GotFocus" Text="__/__/__1"
                                 />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </DatePicker.Resources>
    </DatePicker>
