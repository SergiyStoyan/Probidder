<UserControl x:Class="Cliver.Probidder.ProbateControl"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliver.Probidder"
             mc:Ignorable="d" >

    <Grid Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition MinWidth="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" Content="Filing County"/>
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="FilingCounty" Text="{Binding FilingCounty, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" Content="Filing State"/>
        <TextBox Grid.Column="3" Grid.Row="0" x:Name="FilingState" IsTabStop="False" IsReadOnly="True" Text="{Binding FilingState, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>
        <Label Grid.Column="4" Grid.Row="0" HorizontalAlignment="Right" Content="Case Number"/>
        <local:ComboBoxControl1 VerticalAlignment="Top" IsTextSearchCaseSensitive="False" IsTextSearchEnabled="True" Grid.Column="5" Grid.Row="0" x:Name="CaseNumber" Text="{Binding CaseNumber, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}" IsEditable="True" ItemsSource="{Binding CASE_Ns, Mode=OneWay}"/>
        <Label Grid.Column="6" Grid.Row="0" HorizontalAlignment="Right" Content="Filling Date"/>
        <local:DatePickerControl  Grid.Column="7" Grid.Row="0" x:Name="FillingDate" Text2="{Binding FillingDate, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" 
                                              />

        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" Content="Dec First"/>
        <TextBox Grid.Column="1" Grid.Row="1" x:Name="DeceasedFirst" Text="{Binding DeceasedFirst, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Content="Dec Middle"/>
        <TextBox Grid.Column="3" Grid.Row="1" x:Name="DeceasedMiddle" Text="{Binding DeceasedMiddle, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>
        <Label Grid.Column="4" Grid.Row="1" HorizontalAlignment="Right" Content="Dec Last"/>
        <TextBox Grid.Column="5" Grid.Row="1" x:Name="DeceasedLast" Text="{Binding DeceasedLast, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>

        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" Content="Adm First"/>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="AdmFirst" Text="{Binding DeceasedFirst, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" Content="Adm Middle"/>
        <TextBox Grid.Column="3" Grid.Row="2" x:Name="AdmMiddle" Text="{Binding DeceasedMiddle, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>
        <Label Grid.Column="4" Grid.Row="2" HorizontalAlignment="Right" Content="Adm Last"/>
        <TextBox Grid.Column="5" Grid.Row="2" x:Name="AdmLast" Text="{Binding DeceasedLast, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>

        <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" Content="Dec Str Logo"/>
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="DeceasedPlaceLogo" Text="{Binding DeceasedPlaceLogo, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" Content="Dec Str #"/>
        <TextBox Grid.Column="3" Grid.Row="3" x:Name="DeceasedStreetNumber" Text="{Binding DeceasedStreetNumber, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>
        <Label Grid.Column="4" Grid.Row="3" HorizontalAlignment="Right" Content="Dec Str Direct"/>
        <TextBox Grid.Column="5" Grid.Row="3" x:Name="DeceasedStreetDirect" Text="{Binding DeceasedStreetDirect, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="6" Grid.Row="3" HorizontalAlignment="Right" Content="Dec Str Name"/>
        <TextBox Grid.Column="7" Grid.Row="3" x:Name="DeceasedStreetName" Text="{Binding DeceasedStreetName, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>

        <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" Content="Dec Unit #"/>
        <TextBox Grid.Column="1" Grid.Row="4" x:Name="DeceasedUnitNumber" Text="{Binding DeceasedUnitNumber, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="2" Grid.Row="4" HorizontalAlignment="Right" Content="Dec City"/>
        <TextBox Grid.Column="3" Grid.Row="4" x:Name="DeceasedCity" Text="{Binding DeceasedCity, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>
        <Label Grid.Column="4" Grid.Row="4" HorizontalAlignment="Right" Content="Dec County"/>
        <TextBox Grid.Column="5" Grid.Row="4" x:Name="DeceasedCounty" Text="{Binding DeceasedCounty, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="6" Grid.Row="4" HorizontalAlignment="Right" Content="Dec State"/>
        <TextBox Grid.Column="7" Grid.Row="4" x:Name="DeceasedState" Text="{Binding DeceasedState, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>

        <Label Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" Content="Dec Zip"/>
        <local:ComboBoxControl1 Grid.Column="1" Grid.Row="5"  IsTextSearchCaseSensitive="False" IsTextSearchEnabled="True"  VerticalAlignment="Top" x:Name="DeceasedZip" IsEditable="True"  Text="{Binding DeceasedZip, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}" ItemsSource="{Binding ZIPs}"/>


        <Label Grid.Column="0" Grid.Row="6" HorizontalAlignment="Right" Content="Adm Str Logo"/>
        <TextBox Grid.Column="1" Grid.Row="6" x:Name="AdministratorStreetLogo" Text="{Binding AdministratorStreetLogo, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="2" Grid.Row="6" HorizontalAlignment="Right" Content="Adm Str #"/>
        <TextBox Grid.Column="3" Grid.Row="6" x:Name="AdministratorStreetNumber" Text="{Binding AdministratorStreetNumber, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>
        <Label Grid.Column="4" Grid.Row="6" HorizontalAlignment="Right" Content="Adm Str Direct"/>
        <TextBox Grid.Column="5" Grid.Row="6" x:Name="AdministratorStreetDirect" Text="{Binding AdministratorStreetDirect, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="6" Grid.Row="6" HorizontalAlignment="Right" Content="Adm Str Name"/>
        <TextBox Grid.Column="7" Grid.Row="6" x:Name="AdministratorStreetName" Text="{Binding AdministratorStreetName, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>

        <Label Grid.Column="0" Grid.Row="7" HorizontalAlignment="Right" Content="Adm Unit #"/>
        <TextBox Grid.Column="1" Grid.Row="7" x:Name="AdministratorUnitNumber" Text="{Binding AdministratorUnitNumber, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="2" Grid.Row="7" HorizontalAlignment="Right" Content="Adm City"/>
        <TextBox Grid.Column="3" Grid.Row="7" x:Name="AdministratorCity" Text="{Binding AdministratorCity, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>
        <Label Grid.Column="4" Grid.Row="7" HorizontalAlignment="Right" Content="Adm State"/>
        <TextBox Grid.Column="5" Grid.Row="7" x:Name="AdministratorCounty" Text="{Binding AdministratorCounty, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="6" Grid.Row="7" HorizontalAlignment="Right" Content="Adm Zip"/>
        <local:ComboBoxControl1 Grid.Column="7" Grid.Row="7"  IsTextSearchCaseSensitive="False" IsTextSearchEnabled="True"  VerticalAlignment="Top" x:Name="AdministratorZip" IsEditable="True"  Text="{Binding AdministratorZip, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}" ItemsSource="{Binding ZIPs}"/>

        <Label Grid.Column="0" Grid.Row="8" HorizontalAlignment="Right" Content="Adm Phone"/>
        <TextBox Grid.Column="1" Grid.Row="8" x:Name="AdministratorPhone" Text="{Binding AdministratorPhone, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>


        <Label Grid.Column="0" Grid.Row="9" HorizontalAlignment="Right" Content="Death Date"/>
        <local:DatePickerControl  Grid.Column="1" Grid.Row="9" x:Name="DeathDate" Text2="{Binding DeathDate, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" />
        <Label Grid.Column="2" Grid.Row="9" HorizontalAlignment="Right" Content="Will Date"/>
        <local:DatePickerControl  Grid.Column="3" Grid.Row="9" x:Name="WillDate" Text2="{Binding WillDate, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" />
        <Label Grid.Column="4" Grid.Row="9" HorizontalAlignment="Right" Content="Testate"/>
        <TextBox Grid.Column="5" Grid.Row="9" x:Name="Testate" Text="{Binding Testate, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>

        <Label Grid.Column="0" Grid.Row="10" HorizontalAlignment="Right" Content="RE Prop"/>
        <TextBox Grid.Column="1" Grid.Row="10" x:Name="ReProperty" Text="{Binding ReProperty, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>
        <Label Grid.Column="2" Grid.Row="10" HorizontalAlignment="Right" Content="RE Value"/>
        <TextBox Grid.Column="3" Grid.Row="10" x:Name="ReValue" Text="{Binding ReValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>
        <Label Grid.Column="4" Grid.Row="10" HorizontalAlignment="Right" Content="Personal Value"/>
        <TextBox Grid.Column="5" Grid.Row="10" x:Name="PersonalValue" Text="{Binding PersonalValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"/>


        <Label Grid.Column="0" Grid.Row="11" HorizontalAlignment="Right" Content="Attorney"/>
        <local:ComboBoxControl1  Grid.Column="1" Grid.Row="11" Grid.ColumnSpan="3"  IsTextSearchEnabled="True" IsTextSearchCaseSensitive="False"  VerticalAlignment="Top" IsEditable="True" x:Name="Attorney"  Text="{Binding Attorney, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}" ItemsSource="{Binding ATTYs}"/>
        <Label Grid.Column="4" Grid.Row="11" HorizontalAlignment="Right" Content="Attorney Phone"/>
        <local:ComboBoxPhoneControl VerticalAlignment="Top" Grid.Column="5" Grid.Row="11" Grid.ColumnSpan="1" IsEditable="True" x:Name="AttorneyPhone" Text="{Binding AttorneyPhone, Mode=TwoWay, TargetNullValue='', StringFormat=\{0:(###)-###-####\}, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}" ItemsSource="{Binding ATTORNEY_Ss}"/>
        <Label Grid.Column="6" Grid.Row="11" HorizontalAlignment="Right" Content="Heirs / Legatees"/>
        <TextBox Grid.Column="7" Grid.Row="11" x:Name="HeirsOrOthers" Text="{Binding HeirsOrOthers, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" KeyboardNavigation.TabNavigation="None"/>

        <Label Grid.Column="0" Grid.Row="12" HorizontalAlignment="Right" Content="Comments"/>
        <TextBox Grid.Column="1" Grid.Row="12" Grid.ColumnSpan="7"  x:Name="Comments" Text="{Binding Comments, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" AcceptsReturn="True" TextWrapping="Wrap"/>

    </Grid>
</UserControl>
