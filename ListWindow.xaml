<Window x:Class="Cliver.Foreclosures.ListWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliver.Foreclosures"
             mc:Ignorable="d" 
        Title="Foreclosures" Height="auto" Width="auto" SizeToContent="WidthAndHeight"
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanResize" 
        Background="#ffffff" Topmost="False" ShowInTaskbar="True"
        FontFamily="Microsoft Sans Serif"
         AllowDrop="True"
            >
    <Window.Resources>
        <DataTemplate x:Key="ArrowUp">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center"
                           Text="{Binding}" />
                <Path VerticalAlignment="Center"
                      Fill="Black"
                      Data="M 5,5 15,5 10,0 5,5" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate x:Key="ArrowDown">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center"
                           Text="{Binding}" />
                <Path VerticalAlignment="Center"
                      Fill="Black"
                      Data="M 5,0 10,5 15,0 5,0" />
            </DockPanel>
        </DataTemplate>        
        <UserControl x:Key="case2" Name="rr">
            <StackPanel Orientation="Horizontal">
                <Label>Id</Label>
                <Label>N</Label>
                <Button>X</Button>
                <Button>X</Button>
            </StackPanel>
        </UserControl>
    </Window.Resources>
    <Grid Background="Beige">
        <DockPanel Background="Beige">
            <Popup Name="refresh_db_last_time0" Placement="Top" PlacementTarget="{Binding ElementName=refresh_db}" IsOpen="False">
                        <TextBlock Name="refresh_db_last_time" Padding="5,2,5,2" Background="Bisque" FontStyle="Italic" Foreground="#000">Refreshed at: ?</TextBlock>
                    </Popup>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Export" Name="export" Click="export_Click"/>
                    <MenuItem Header="Refresh Database" Name="refresh_db" Click="refresh_db_Click" GotFocus="refresh_db_last_time_GotFocus" LostFocus="refresh_db_LostFocus"/>
                   
                    <Separator />
                    <MenuItem Header="Exit" Name="exit" Click="exit_Click"/>
                </MenuItem>
                <MenuItem Header="New" Click="new_Click">
                </MenuItem>
                <MenuItem Header="Filter" Name="show_search" Click="show_search_Click" IsChecked="False">
                </MenuItem>
                <MenuItem Header="Settings">
                    <MenuItem Header="Login" Name="login" Click="login_Click"/>
                    <MenuItem Header="Location" Name="location" Click="location_Click"/>
                    <MenuItem Header="Database" Name="database" Click="database_Click"/>
                    <Separator></Separator>
                    <MenuItem Header="Reset All" Name="reset" Click="reset_Click"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="Logs" Name="work_dir" Click="work_dir_Click"/>
                    <MenuItem Header="About" Name="about" Click="about_Click"/>
                </MenuItem>
            </Menu>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel>    
                <Grid Name="search" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                    <Label Content="Find:" Grid.Column="0"/>
                        <TextBox Name="keyword" Grid.Column="1" HorizontalAlignment="Stretch" TextChanged="keyword_TextChanged"></TextBox>
                        <Button Name="close_search" Content="X" Grid.Column="2" Click="close_search_Click"/>
                    </Grid>
                    <ListView Margin="0"  MinHeight="100" Height="auto" Name="list" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="list_SelectionChanged" GridViewColumnHeader.Click="list_Click">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <!--GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Name="show" Content="Show" Margin="0" VerticalAlignment="Center" Click="show_Click" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            </-->
                                    <GridViewColumn Header="Id"  Width="Auto" DisplayMemberBinding="{Binding Path=Id}" >
                                    </GridViewColumn>
                                    <GridViewColumn Header="Created" Width="Auto" DisplayMemberBinding="{Binding Path=FILING_DATE, StringFormat=MM-dd-yy}" />
                                    <GridViewColumn Header="City" Width="Auto" DisplayMemberBinding="{Binding Path=CITY}" />
                                    <GridViewColumn Header="Address" Width="Auto" DisplayMemberBinding="{Binding Path=ADDRESS}" >
                                    </GridViewColumn>
                                </GridView.Columns>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="list_PreviewMouseLeftButtonDown" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            </StackPanel>
                </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
